        </if>
        <if test="type != null and type != ''">
        	and type = #{type,jdbcType=DECIMAL}
        </if>
        <if test="typeName != null and typeName != ''">
        	and type_name = #{typeName,jdbcType=VARCHAR}
        </if>
        <if test="provinceName2 != null and provinceName2 != ''">
        	and province_name2 = #{provinceName2,jdbcType=VARCHAR}
        </if>
        <if test="provinceNo != null and provinceNo != ''">
        	and province_no = #{provinceNo,jdbcType=VARCHAR}
        </if>
        <if test="cityName2 != null and cityName2 != ''">
        	and city_name2 = #{cityName2,jdbcType=VARCHAR}
        </if>
