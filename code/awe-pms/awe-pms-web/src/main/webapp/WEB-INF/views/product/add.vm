                                    			#end
                                    		#end
                                        </select>
                                    </div>
									#*
									<label class="col-sm-1 control-label no-padding-right" for="material">材质</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="material" id="material" class="col-xs-10 col-sm-8" />
                                    </div>
									*#
									<label class="col-sm-1 control-label no-padding-right" for="weight">净重(kg)</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="weight" id="weight" class="col-xs-10 col-sm-8" />
                                    </div>
