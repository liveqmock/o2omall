<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/productCategory/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/productCategory");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/productCategory/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/productCategory/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>商品类别查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="fid">父ID</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="fid" id="fid" class="col-xs-10 col-sm-8" value="$!query.fid"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="name">类目名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="name" id="name" class="col-xs-10 col-sm-8" value="$!query.name"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="enName">类目英文名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="enName" id="enName" class="col-xs-10 col-sm-8" value="$!query.enName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="keyword">关键字</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="keyword" id="keyword" class="col-xs-10 col-sm-8" value="$!query.keyword"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="remark">描述</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="remark" id="remark" class="col-xs-10 col-sm-8" value="$!query.remark"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="level">级别</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="level" id="level" class="col-xs-10 col-sm-8" value="$!query.level"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="priority">优先级</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="priority" id="priority" class="col-xs-10 col-sm-8" value="$!query.priority"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">主键</th>
							<th class="center">父ID</th>
							<th class="center">类目名称</th>
							<th class="center">类目英文名称</th>
							<th class="center">关键字</th>
							<th class="center">描述</th>
							<th class="center">级别</th>
							<th class="center">优先级</th>
							<th class="center">创建时间</th>
							<th class="center">创建人</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.fid</td>
                                <td>$!item.name</td>
                                <td>$!item.enName</td>
                                <td>$!item.keyword</td>
                                <td>$!item.remark</td>
                                <td>$!item.level</td>
                                <td>$!item.priority</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>$!item.createUser</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/productCategory/detailModal.vm")
    </body>
</html>
