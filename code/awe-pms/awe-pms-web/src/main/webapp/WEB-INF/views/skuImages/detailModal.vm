						<tr>
							<th class="center" style='width:25%;'>图片路径</th><td id="r_imgPath" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>是否主图</th><td id="r_isPrimaryPath" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>描述</th><td id="r_remark" style='width:25%;'></td>
						</tr>
