         <div class="clearfix">
           <h3 class="my_cat_con ml10">我的购物车</h3>
           <table width="100%" border="0" class="cat_tab" cellspacing="0" cellpadding="0">
           <thead>
              <tr>
                <th class="tcenter" width="75"><input type="checkbox" /></th>
                <th width="193">全选</th>
                <th width="247">商品</th>
                <th width="200">价格</th>
                <th class="tcenter">数量</th>
                <th class="tcenter" width="129">操作</th>
              </tr>
              </thead>
              <tbody>
			 #foreach( $item in $dataList)
                  <tr>
                    <td class="tcenter"><input type="checkbox" /></td>
                    <td><a href="#springUrl('')/shopping/product_details?skuNo='$!skuNo'" ><img class="my_cat_img" src="#springUrl('')/static/images/m-img2.jpg" /></a></td>
                    <td><p>$!item.skuName</p></td>
                    <td>¥$!item.price</td>
                    <td class="tcenter"><div class="buynum"><a href="#springUrl('')/cart/updateCart?skuNo='$!item.skuNo'&skuCount='$(#$!item.skuNo).val()'" class="reduce ml20">-</a><input type="text" id="$!item.skuNo" value="$!item.skuCount"/><a href="" class="reduce">+</a></div></td>
                    <td class="tcenter"><a href="#springUrl('')/cart/deleteCart?skuNo='$!item.skuNo'" class="del">删除</a><a href="" class="modify">修改</a></td>
                  </tr>
			  #end
