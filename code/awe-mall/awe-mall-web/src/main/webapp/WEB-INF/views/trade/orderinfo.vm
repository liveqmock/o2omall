				   var provinceName="";
				   var provinceNo="";
				   var cityName="";
				   var cityNo="";
				   var countyName="";
				   var countyNo="";
				   var name="";
				   var address="";
				   var mobile="";
    				$.each(data.result,function(i,item){
					    var phone = item.phone;
						if(item.phone == null){
						    phone = '';
						}
						txtRadio=  item.name +"    "+ item.mobile  +"    "+ phone+" "+ item.provinceName + " "+ item.cityName +" "+ item.countyName +" "+item.address;
						//全部地址  <input type="radio" name="address" id="radioaddress" value="1" onchange="myradio();" checked />张三
						if(item.isdefault == 1){
						txt = item.name + "    " + item.mobile +"   "+ phone+"<p>"+"<br/>"+ item.provinceName + " "+ item.cityName +" "+ item.countyName +" "+item.address;
						provinceName = item.provinceName;
						provinceNo = item.provinceNo;
						cityName = item.cityName;
						cityNo = item.cityNo;
						countyName = item.countyName;
						countyNo = item.countyNo;
						name = item.cityName;
						address = item.address;
						mobile = item.mobile;
						$('#user_radio').append("<input checked type='radio' name='address' value='"+item.id+"' id='radioaddress' onchange='myradio();'/> "+txtRadio+"  <a href='javascript:void(0)' onclick='queryAddress("+item.id+")'><font color='blue'>编辑</font></a>   | <a href='javascript:void(0)' onclick='deleteAddress("+item.id+")'><font color='blue'>删除</font></a>  <p><br/> ");
						}else{
						$('#user_radio').append("<input type='radio' name='address' value='"+item.id+"' id='radioaddress' onchange='myradio();'/> "+txtRadio+"  <a href='javascript:void(0)' onclick='queryAddress("+item.id+")'><font color='blue'>编辑</font></a>   | <a href='javascript:void(0)' onclick='deleteAddress("+item.id+")'><font color='blue'>删除</font></a>  <p><br/> ");
						}
					});
					//默认显示收货人信息
					$("#user_text").html(txt);
					//-----------------提交表单是用
					$("#mall_provinceName").val(provinceName);
            		$("#mall_provinceNo").val(provinceNo);
            		
            		$("#mall_cityName").val(cityName);//市
            		$("#mall_cityNo").val(cityNo);
            		
            		$("#mall_countyName").val(countyName);//县
            		$("#mall_countyNo").val(countyNo);
					
    				 $("#mall_name").val(name);//收货人
    		         $("#mall_address").val(address);//详细地址
    		         $("#mall_mobile").val(mobile);//移动电话
					
					//新增radio
    			} else {
    				//alert("获取省份信息失败");
    			}
				$('#user_radio').append("<input type='radio' value='0' name='address' id='radioaddress' onchange='myradio();'/> 添加新地址");
    		},
    		error : function(data) {
