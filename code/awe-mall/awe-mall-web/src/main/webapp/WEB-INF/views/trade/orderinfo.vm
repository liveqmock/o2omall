    		}
    	});
	}
 	
	//获取省信息
	function province(){
	$("#provinceNo").empty();
	$("#cityNo").empty();
	$("#countyNo").empty();
		jQuery.ajax({
    		type: "GET",
    		url:"#springUrl('')/area/queryProvince",
    		dataType : 'json',
    		success: function(data){
    			if(data!=null && data.code==200 && data.result!=null){
    				var r = data.result;
					if(r.length > 0){
					    $('#provinceNo').append("<option value=''>请选择</option>");
						$.each(data.result,function(i,item){
						 $('#provinceNo').append("<option value='" + item.code+ "'>" + item.name + "</option>");
						});
					}		
    			} else {
    				//alert("获取省份信息失败");
    			}
    		},
    		error : function(data) {
    			alert("获取省份信息失败");
    		}
    	}); 
	}
	//市
	function Oncity(provinceNo){
	$("#cityNo").empty();
	$("#countyNo").empty();
		jQuery.ajax({
    		type: "GET",
			data:{provinceNO:provinceNo},
    		url:"#springUrl('')/area/queryCityNo",
