<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/ordersItems/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/ordersItems");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/ordersItems/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/ordersItems/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>订单明细查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="orderNo">订单编码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderNo" id="orderNo" class="col-xs-10 col-sm-8" value="$!query.orderNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="skuNo">sku编码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="skuNo" id="skuNo" class="col-xs-10 col-sm-8" value="$!query.skuNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="productNo">商品编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="productNo" id="productNo" class="col-xs-10 col-sm-8" value="$!query.productNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="count">商品个数</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="count" id="count" class="col-xs-10 col-sm-8" value="$!query.count"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="skuName">商品名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="skuName" id="skuName" class="col-xs-10 col-sm-8" value="$!query.skuName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="imgUrl">商品主图</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="imgUrl" id="imgUrl" class="col-xs-10 col-sm-8" value="$!query.imgUrl"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="discount">商品优惠价</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="discount" id="discount" class="col-xs-10 col-sm-8" value="$!query.discount"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="skuPrice">商品单价</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="skuPrice" id="skuPrice" class="col-xs-10 col-sm-8" value="$!query.skuPrice"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="finalPrice">优惠后价格</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="finalPrice" id="finalPrice" class="col-xs-10 col-sm-8" value="$!query.finalPrice"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="createName">创建人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="createName" id="createName" class="col-xs-10 col-sm-8" value="$!query.createName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="updateName">修改人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="updateName" id="updateName" class="col-xs-10 col-sm-8" value="$!query.updateName"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">主键自增id</th>
							<th class="center">订单编码</th>
							<th class="center">sku编码</th>
							<th class="center">商品编号</th>
							<th class="center">商品个数</th>
							<th class="center">商品名称</th>
							<th class="center">商品主图</th>
							<th class="center">商品优惠价</th>
							<th class="center">商品单价</th>
							<th class="center">优惠后价格</th>
							<th class="center">创建人</th>
							<th class="center">修改人</th>
							<th class="center">创建时间</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.orderNo</td>
                                <td>$!item.skuNo</td>
                                <td>$!item.productNo</td>
                                <td>$!item.count</td>
                                <td>$!item.skuName</td>
                                <td>$!item.imgUrl</td>
                                <td>$!item.discount</td>
                                <td>$!item.skuPrice</td>
                                <td>$!item.finalPrice</td>
                                <td>$!item.createName</td>
                                <td>$!item.updateName</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/ordersItems/detailModal.vm")
    </body>
</html>
