<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/orders/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/orders");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/orders/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/orders/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>订单查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="orderNo">订单编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderNo" id="orderNo" class="col-xs-10 col-sm-8" value="$!query.orderNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="orderType">订单类型</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderType" id="orderType" class="col-xs-10 col-sm-8" value="$!query.orderType"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userId">下单用户ID</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userId" id="userId" class="col-xs-10 col-sm-8" value="$!query.userId"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userName">下单用户账号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userName" id="userName" class="col-xs-10 col-sm-8" value="$!query.userName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="orderName">下单姓名</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderName" id="orderName" class="col-xs-10 col-sm-8" value="$!query.orderName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="consigneeName">收货人姓名</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="consigneeName" id="consigneeName" class="col-xs-10 col-sm-8" value="$!query.consigneeName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="consigneePhone">收货人手机号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="consigneePhone" id="consigneePhone" class="col-xs-10 col-sm-8" value="$!query.consigneePhone"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="telephone">固定电话</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="telephone" id="telephone" class="col-xs-10 col-sm-8" value="$!query.telephone"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="emil">邮箱</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="emil" id="emil" class="col-xs-10 col-sm-8" value="$!query.emil"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="zipCode">邮编</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="zipCode" id="zipCode" class="col-xs-10 col-sm-8" value="$!query.zipCode"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="payName">支付名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="payName" id="payName" class="col-xs-10 col-sm-8" value="$!query.payName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="orderDate">送货日期</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderDate" id="orderDate" class="col-xs-10 col-sm-8" value="$!query.orderDate"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="isTalSure">是否送货前电话确定</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="isTalSure" id="isTalSure" class="col-xs-10 col-sm-8" value="$!query.isTalSure"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="payWay">付款方式</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="payWay" id="payWay" class="col-xs-10 col-sm-8" value="$!query.payWay"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="payType">付款类型</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="payType" id="payType" class="col-xs-10 col-sm-8" value="$!query.payType"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="isInvoice">是否要发票</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="isInvoice" id="isInvoice" class="col-xs-10 col-sm-8" value="$!query.isInvoice"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="invoiceType">发票类型</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="invoiceType" id="invoiceType" class="col-xs-10 col-sm-8" value="$!query.invoiceType"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="invoiceTitle">发票抬头</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="invoiceTitle" id="invoiceTitle" class="col-xs-10 col-sm-8" value="$!query.invoiceTitle"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="invoiceContent">发票内容</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="invoiceContent" id="invoiceContent" class="col-xs-10 col-sm-8" value="$!query.invoiceContent"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="orderStatus">订单状态</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="orderStatus" id="orderStatus" class="col-xs-10 col-sm-8" value="$!query.orderStatus"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="commAmount">总商品金额</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="commAmount" id="commAmount" class="col-xs-10 col-sm-8" value="$!query.commAmount"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="retCash">返现</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="retCash" id="retCash" class="col-xs-10 col-sm-8" value="$!query.retCash"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="expenses">运费</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="expenses" id="expenses" class="col-xs-10 col-sm-8" value="$!query.expenses"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="amountPay">应付总额</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="amountPay" id="amountPay" class="col-xs-10 col-sm-8" value="$!query.amountPay"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="parentOrderNo">父订单编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="parentOrderNo" id="parentOrderNo" class="col-xs-10 col-sm-8" value="$!query.parentOrderNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="provinceName">省份名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="provinceName" id="provinceName" class="col-xs-10 col-sm-8" value="$!query.provinceName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="provinceNo">省份编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="provinceNo" id="provinceNo" class="col-xs-10 col-sm-8" value="$!query.provinceNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="cityName">市名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="cityName" id="cityName" class="col-xs-10 col-sm-8" value="$!query.cityName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="cityNo">市编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="cityNo" id="cityNo" class="col-xs-10 col-sm-8" value="$!query.cityNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="countyName">县名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="countyName" id="countyName" class="col-xs-10 col-sm-8" value="$!query.countyName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="countyNo">省编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="countyNo" id="countyNo" class="col-xs-10 col-sm-8" value="$!query.countyNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="address">送货地址</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="address" id="address" class="col-xs-10 col-sm-8" value="$!query.address"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="payTime">支付时间</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="payTime" id="payTime" class="col-xs-10 col-sm-8" value="$!query.payTime"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="remark">订单备注</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="remark" id="remark" class="col-xs-10 col-sm-8" value="$!query.remark"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="createName">创建人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="createName" id="createName" class="col-xs-10 col-sm-8" value="$!query.createName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="integral">积分</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="integral" id="integral" class="col-xs-10 col-sm-8" value="$!query.integral"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="updateName">修改人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="updateName" id="updateName" class="col-xs-10 col-sm-8" value="$!query.updateName"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">自增id</th>
							<th class="center">订单编号</th>
							<th class="center">订单类型</th>
							<th class="center">下单用户ID</th>
							<th class="center">下单用户账号</th>
							<th class="center">下单姓名</th>
							<th class="center">收货人姓名</th>
							<th class="center">收货人手机号</th>
							<th class="center">固定电话</th>
							<th class="center">邮箱</th>
							<th class="center">邮编</th>
							<th class="center">支付名称</th>
							<th class="center">送货日期</th>
							<th class="center">是否送货前电话确定</th>
							<th class="center">付款方式</th>
							<th class="center">付款类型</th>
							<th class="center">是否要发票</th>
							<th class="center">发票类型</th>
							<th class="center">发票抬头</th>
							<th class="center">发票内容</th>
							<th class="center">订单状态</th>
							<th class="center">总商品金额</th>
							<th class="center">返现</th>
							<th class="center">运费</th>
							<th class="center">应付总额</th>
							<th class="center">父订单编号</th>
							<th class="center">省份名称</th>
							<th class="center">省份编号</th>
							<th class="center">市名称</th>
							<th class="center">市编号</th>
							<th class="center">县名称</th>
							<th class="center">省编号</th>
							<th class="center">送货地址</th>
							<th class="center">支付时间</th>
							<th class="center">订单备注</th>
							<th class="center">创建时间</th>
							<th class="center">创建人</th>
							<th class="center">积分</th>
							<th class="center">修改人</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.orderNo</td>
                                <td>$!item.orderType</td>
                                <td>$!item.userId</td>
                                <td>$!item.userName</td>
                                <td>$!item.orderName</td>
                                <td>$!item.consigneeName</td>
                                <td>$!item.consigneePhone</td>
                                <td>$!item.telephone</td>
                                <td>$!item.emil</td>
                                <td>$!item.zipCode</td>
                                <td>$!item.payName</td>
                                <td>$!item.orderDate</td>
                                <td>$!item.isTalSure</td>
                                <td>$!item.payWay</td>
                                <td>$!item.payType</td>
                                <td>$!item.isInvoice</td>
                                <td>$!item.invoiceType</td>
                                <td>$!item.invoiceTitle</td>
                                <td>$!item.invoiceContent</td>
                                <td>$!item.orderStatus</td>
                                <td>$!item.commAmount</td>
                                <td>$!item.retCash</td>
                                <td>$!item.expenses</td>
                                <td>$!item.amountPay</td>
                                <td>$!item.parentOrderNo</td>
                                <td>$!item.provinceName</td>
                                <td>$!item.provinceNo</td>
                                <td>$!item.cityName</td>
                                <td>$!item.cityNo</td>
                                <td>$!item.countyName</td>
                                <td>$!item.countyNo</td>
                                <td>$!item.address</td>
                                <td>$!item.payTime</td>
                                <td>$!item.remark</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>$!item.createName</td>
                                <td>$!item.integral</td>
                                <td>$!item.updateName</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/orders/detailModal.vm")
    </body>
</html>
