<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/userAccount/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/userAccount");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/userAccount/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/userAccount/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>用户账号查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="username">账号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="username" id="username" class="col-xs-10 col-sm-8" value="$!query.username"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="password">密码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="password" id="password" class="col-xs-10 col-sm-8" value="$!query.password"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="loginTimes">登录次数</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="loginTimes" id="loginTimes" class="col-xs-10 col-sm-8" value="$!query.loginTimes"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="lastLoginIp">用户上次登录IP</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="lastLoginIp" id="lastLoginIp" class="col-xs-10 col-sm-8" value="$!query.lastLoginIp"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="lastLoginTime">用户上次登录时间</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="lastLoginTime" id="lastLoginTime" class="col-xs-10 col-sm-8" value="$!query.lastLoginTime"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">id自增</th>
							<th class="center">账号</th>
							<th class="center">密码</th>
							<th class="center">登录次数</th>
							<th class="center">用户上次登录IP</th>
							<th class="center">用户上次登录时间</th>
							<th class="center">创建人</th>
							<th class="center">创建时间</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.username</td>
                                <td>$!item.password</td>
                                <td>$!item.loginTimes</td>
                                <td>$!item.lastLoginIp</td>
                                <td>$!item.lastLoginTime</td>
                                <td>$!item.createUser</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/userAccount/detailModal.vm")
    </body>
</html>
