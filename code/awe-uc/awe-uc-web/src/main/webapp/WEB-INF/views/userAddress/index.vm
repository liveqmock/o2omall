<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/userAddress/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/userAddress");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/userAddress/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/userAddress/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>收货地址查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="userId">用户ID</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userId" id="userId" class="col-xs-10 col-sm-8" value="$!query.userId"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="name">收货人姓名</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="name" id="name" class="col-xs-10 col-sm-8" value="$!query.name"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="provinceName">省份名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="provinceName" id="provinceName" class="col-xs-10 col-sm-8" value="$!query.provinceName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="provinceNo">省份编码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="provinceNo" id="provinceNo" class="col-xs-10 col-sm-8" value="$!query.provinceNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="cityName">市名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="cityName" id="cityName" class="col-xs-10 col-sm-8" value="$!query.cityName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="cityNo">市编号</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="cityNo" id="cityNo" class="col-xs-10 col-sm-8" value="$!query.cityNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="countyName">县名称</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="countyName" id="countyName" class="col-xs-10 col-sm-8" value="$!query.countyName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="countyNo">县编码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="countyNo" id="countyNo" class="col-xs-10 col-sm-8" value="$!query.countyNo"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="address">详细地址</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="address" id="address" class="col-xs-10 col-sm-8" value="$!query.address"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="mobile">移动电话</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="mobile" id="mobile" class="col-xs-10 col-sm-8" value="$!query.mobile"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="phone">固定电话</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="phone" id="phone" class="col-xs-10 col-sm-8" value="$!query.phone"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="email">电子邮件</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="email" id="email" class="col-xs-10 col-sm-8" value="$!query.email"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="zipcode">邮编</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="zipcode" id="zipcode" class="col-xs-10 col-sm-8" value="$!query.zipcode"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">自增Id</th>
							<th class="center">用户ID</th>
							<th class="center">收货人姓名</th>
							<th class="center">省份名称</th>
							<th class="center">省份编码</th>
							<th class="center">市名称</th>
							<th class="center">市编号</th>
							<th class="center">县名称</th>
							<th class="center">县编码</th>
							<th class="center">详细地址</th>
							<th class="center">移动电话</th>
							<th class="center">固定电话</th>
							<th class="center">电子邮件</th>
							<th class="center">邮编</th>
							<th class="center">创建人</th>
							<th class="center">创建时间</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.userId</td>
                                <td>$!item.name</td>
                                <td>$!item.provinceName</td>
                                <td>$!item.provinceNo</td>
                                <td>$!item.cityName</td>
                                <td>$!item.cityNo</td>
                                <td>$!item.countyName</td>
                                <td>$!item.countyNo</td>
                                <td>$!item.address</td>
                                <td>$!item.mobile</td>
                                <td>$!item.phone</td>
                                <td>$!item.email</td>
                                <td>$!item.zipcode</td>
                                <td>$!item.createUser</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/userAddress/detailModal.vm")
    </body>
</html>
