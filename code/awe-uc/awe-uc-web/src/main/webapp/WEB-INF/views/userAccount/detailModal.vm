<!-- Modal -->
<div class="modal fade" id="myUserAccountModal" tabindex="-1" role="dialog" aria-labelledby="myUserAccountModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myUserAccountModalLabel">用户账号详情</h4>
			</div>
			<div class="modal-body"> 
				<table class="table table-striped table-bordered table-condensed table-hover">
					<tbody>
						<tr>
							<th class="center" style='width:25%;'>id自增</th><td id="r_id" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>账号</th><td id="r_username" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>密码</th><td id="r_password" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>登录次数</th><td id="r_loginTimes" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>用户上次登录IP</th><td id="r_lastLoginIp" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>用户上次登录时间</th><td id="r_lastLoginTime" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>创建人</th><td id="r_createUser" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>修改人</th><td id="r_updateUser" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>创建时间</th><td id="r_createTime" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>修改时间</th><td id="r_updateTime" style='width:25%;'></td>
						</tr>
						<tr>
							<th class="center" style='width:25%;'>是否有效</th><td id="r_yn" style='width:25%;'></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script language="javascript">         	
    function toDetail(parameterId){
		$("#tab_online_tbody").html("");
		$("#tab_config_tbody").html("");
		$("#tab_log_tbody").html("");
    	jQuery.ajax({
    		type: "GET",
    		url: basePath + "/userAccount/detail",
    		dataType : 'json',
    		data: "id=" + parameterId,
    		
    		success: function(data){
    			if(data!=null && data.code==200 && data.result!=null){
    				var r = data.result;
    				$("#r_id").text(r.id==null?"":r.id);
    				$("#r_username").text(r.username==null?"":r.username);
    				$("#r_password").text(r.password==null?"":r.password);
    				$("#r_loginTimes").text(r.loginTimes==null?"":r.loginTimes);
    				$("#r_lastLoginIp").text(r.lastLoginIp==null?"":r.lastLoginIp);
    				$("#r_lastLoginTime").text(r.lastLoginTime==null?"":r.lastLoginTime);
    				$("#r_createUser").text(r.createUser==null?"":r.createUser);
    				$("#r_updateUser").text(r.updateUser==null?"":r.updateUser);
    				$("#r_createTime").text(r.createTime==null?"":r.createTime);
    				$("#r_updateTime").text(r.updateTime==null?"":r.updateTime);
    				$("#r_yn").text(r.yn==null?"":r.yn);
    			} else {
    				alert("获取详情失败");
    			}
    		},
    		
    		error : function(data) {
    			alert("获取详情出现异常");
    		}
    	});
		
    	$('#myUserAccountModal').modal('show');
    }
</script>