            });
			
			$("#nav-menu> li > ul").css("display","none");
			$("#menu-"+pc+"> ul").css("display","block");
            
			var current="#subMenu-"+c;
			$(current).addClass("active");
			
			$("#breadcrumb-first").text(pn);
			$("#breadcrumb-second").text(n);
		}
	</script>


