<!DOCTYPE html>
<html lang="zh-cn">
    <head>
		#parse("/layout/head.vm")
        <script language="javascript">
            $(function() {
				$('#updateForm').validate({
					errorElement:"em",
					errorClass:"red",
					rules: {
												pCode: {required: true},
						code: {required: true},
						leval: {required: true},
						name: {required: true},
						createName: {required: true},
						updateName: {required: true},
					},
			
					messages: {
						pCode: { required: "请输入父编号"},
						code: { required: "请输入编号"},
						leval: { required: "请输入级别"},
						name: { required: "请输入名称"},
						createName: { required: "请输入创建人"},
						updateName: { required: "请输入修改人"},
					}
				});
				
				$("#btn-back").click(function(){
					window.location.href=("$basePath/area");
				});
				$("#btn-submit").click(function(){
            		var form = $("#updateForm");
					if(form.valid()==false){
						return;
					}
					jQuery.post('$basePath/area/update',
            			form.serialize(),
            			function(data) { MyPopWindow.SubmitCompletedCallback2(data, "$basePath/area"); }
            		);
            	});
            });
        </script>
    </head>
	<body>
		<div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-plus green"></i>三级地址基础信息&nbsp;&gt;&nbsp;修改
                        </h5>
                        <div class="widget-toolbar"></div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #fff;padding:5px;">
                            <form class="form-horizontal" role="form" id="updateForm">
                                <div class="form-group">
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="pCode">父编号</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="pCode" id="pCode" class="col-xs-12 col-sm-12" value="$!area.pCode" />
                                    </div>
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="code">编号</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="code" id="code" class="col-xs-12 col-sm-12" value="$!area.code" />
                                    </div>
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="leval">级别</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="leval" id="leval" class="col-xs-12 col-sm-12" value="$!area.leval" />
                                    </div>
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="name">名称</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="name" id="name" class="col-xs-12 col-sm-12" value="$!area.name" />
                                    </div>
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="createName">创建人</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="createName" id="createName" class="col-xs-12 col-sm-12" value="$!area.createName" />
                                    </div>
									<label class="col-sm-offset-1 col-sm-1 control-label no-padding-right" for="updateName">修改人</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="updateName" id="updateName" class="col-xs-12 col-sm-12" value="$!area.updateName" />
                                    </div>
                                </div>
								<div class="form-group">
									<input type="hidden" name="id" id="id" value="$!area.id" />
									<div class="col-sm-8 col-sm-offset-4">
                                        <button class="btn btn-info btn-sm" type="button" id="btn-back"><i class="icon-arrow-left"></i>返回</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-submit"><i class="icon-ok"></i>提交</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
	</body>
</html>
