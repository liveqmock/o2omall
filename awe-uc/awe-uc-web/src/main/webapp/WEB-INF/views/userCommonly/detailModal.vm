<script language="javascript">         	
    function toDetail(parameterId){
		$("#tab_online_tbody").html("");
		$("#tab_config_tbody").html("");
		$("#tab_log_tbody").html("");
    	jQuery.ajax({
    		type: "GET",
    		url: basePath + "/userCommonly/detail",
    		dataType : 'json',
    		data: "id=" + parameterId,
    		
    		success: function(data){
    			if(data!=null && data.code==200 && data.result!=null){
    				var r = data.result;
    				$("#r_id").text(r.id==null?"":r.id);
    				$("#r_userUsername").text(r.userUsername==null?"":r.userUsername);
    				$("#r_userPassword").text(r.userPassword==null?"":r.userPassword);
    				$("#r_userEmail").text(r.userEmail==null?"":r.userEmail);
    				$("#r_userName").text(r.userName==null?"":r.userName);
    				$("#r_userMobile").text(r.userMobile==null?"":r.userMobile);
    				$("#r_userValidated").text(r.userValidated==null?"":r.userValidated);
    				$("#r_userLogin").text(r.userLogin==null?"":r.userLogin);
    				$("#r_userLastloginip").text(r.userLastloginip==null?"":r.userLastloginip);
    				$("#r_userLastlogintime").text(r.userLastlogintime==null?"":r.userLastlogintime);
    				$("#r_createName").text(r.createName==null?"":r.createName);
    				$("#r_updateName").text(r.updateName==null?"":r.updateName);
    				$("#r_createTime").text(r.createTime==null?"":r.createTime);
    				$("#r_updateTime").text(r.updateTime==null?"":r.updateTime);
    				$("#r_yn").text(r.yn==null?"":r.yn);
    			} else {
    				alert("获取详情失败");
    			}
    		},
    		
    		error : function(data) {
    			alert("获取详情出现异常");
    		}
    	});
		
    	$('#myUserCommonlyModal').modal('show');
    }
</script>