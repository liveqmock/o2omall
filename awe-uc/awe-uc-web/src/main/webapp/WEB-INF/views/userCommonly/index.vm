<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        #parse("/layout/head.vm")
		<script language="javascript"> 
			$(function() {
				$("#btn-query").click(function() {
        			pageSubmit(1);
   				});
				$("#btn-add").click(function() {
        			window.location.href=("$basePath/userCommonly/addForward");
   				});
			});
        	// 提交分页查询
        	function pageSubmit(pageNoParam) {
                $("#curPage").val(pageNoParam);
            	$("#queryForm").attr("action", "$basePath/userCommonly");
                $("#queryForm").attr("method", "POST");
                $("#queryForm").submit();
        	}
        	
        	function toUpdate(parameterId){
        		window.location.href=("$basePath/userCommonly/updateForward?id="+parameterId);
        	}
        	
        	function toDelete(parameterId){
        		MyPopWindow.ExecuteDelete("$basePath/userCommonly/delete",{ id : parameterId });
        	}
        	
        </script>
	</head>
    <body>
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="widget-box">
                    <div class="widget-header">
                        <h5 class="lighter">
                            <i class="icon-search green"></i>用户-常用信息查询
                        </h5>
                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="1 icon-chevron-up bigger-100"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main" style="background-color: #f5f5f5;padding:5px;">
                            <form class="form-horizontal" role="form" id="queryForm">
								<div class="form-group">
									<label class="col-sm-1 control-label no-padding-right" for="userUsername">用户名</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userUsername" id="userUsername" class="col-xs-10 col-sm-8" value="$!query.userUsername"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userPassword">密码</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userPassword" id="userPassword" class="col-xs-10 col-sm-8" value="$!query.userPassword"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userEmail">邮箱</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userEmail" id="userEmail" class="col-xs-10 col-sm-8" value="$!query.userEmail"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userName">姓名</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userName" id="userName" class="col-xs-10 col-sm-8" value="$!query.userName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userMobile">移动电话</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userMobile" id="userMobile" class="col-xs-10 col-sm-8" value="$!query.userMobile"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userValidated">用户是否验证邮箱</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userValidated" id="userValidated" class="col-xs-10 col-sm-8" value="$!query.userValidated"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userLogin">登录次数</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userLogin" id="userLogin" class="col-xs-10 col-sm-8" value="$!query.userLogin"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userLastloginip">用户上次登录IP</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userLastloginip" id="userLastloginip" class="col-xs-10 col-sm-8" value="$!query.userLastloginip"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="userLastlogintime">用户上次登录时间</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="userLastlogintime" id="userLastlogintime" class="col-xs-10 col-sm-8" value="$!query.userLastlogintime"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="createName">创建人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="createName" id="createName" class="col-xs-10 col-sm-8" value="$!query.createName"/>
                                    </div>
									<label class="col-sm-1 control-label no-padding-right" for="updateName">修改人</label>
                                    <div class="col-sm-3">
                                        <input type="text" name="updateName" id="updateName" class="col-xs-10 col-sm-8" value="$!query.updateName"/>
                                    </div>
								</div>
								<div class="form-group">
									<div class="col-sm-4 col-sm-offset-8">
    									#parse("/layout/page.vm")
                                        <button class="btn btn-info btn-sm" type="button" id="btn-query"><i class="icon-search"></i>查询</button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn btn-sm" type="reset" id="btn-reset"><i class="icon-undo"></i>重置</button>
										 &nbsp; &nbsp; &nbsp;
              							<button class="btn btn-success btn-sm" type="button" id="btn-add"><i class="icon-plus"></i>新增</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
			<div class="col-xs-12 col-sm-12 table-responsive">
                <table class="table table-striped table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
							<th class="center">id自增</th>
							<th class="center">用户名</th>
							<th class="center">密码</th>
							<th class="center">邮箱</th>
							<th class="center">姓名</th>
							<th class="center">移动电话</th>
							<th class="center">用户是否验证邮箱</th>
							<th class="center">登录次数</th>
							<th class="center">用户上次登录IP</th>
							<th class="center">用户上次登录时间</th>
							<th class="center">创建人</th>
							<th class="center">修改人</th>
							<th class="center">创建时间</th>
    						<th class="center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        #foreach( $item in $dataList)
                            <tr>
                                <td>$!item.id</td>
                                <td>$!item.userUsername</td>
                                <td>$!item.userPassword</td>
                                <td>$!item.userEmail</td>
                                <td>$!item.userName</td>
                                <td>$!item.userMobile</td>
                                <td>$!item.userValidated</td>
                                <td>$!item.userLogin</td>
                                <td>$!item.userLastloginip</td>
                                <td>$!item.userLastlogintime</td>
                                <td>$!item.createName</td>
                                <td>$!item.updateName</td>
                                <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss ',$!item.createTime)</td>
                                <td>
									<a href="javascript:void(0)" onclick="toDetail($!item.id);" data-toggle="modal"><i class="icon-list">详情</i></a>
									<a href="javascript:void(0)" onclick="toUpdate($!item.id)"><i class="icon-pencil pink">修改</i></a>
									<a href="javascript:void(0)" onclick="toDelete($!item.id)"><i class="icon-remove red">删除</i></a>
								</td>
                            </tr>
                        #end
                    </tbody>
                </table>
				#pageBarPost($page.totalRow $page.curPage $page.totalPage)
			</div>
        </div>
		#parse("/userCommonly/detailModal.vm")
    </body>
</html>
